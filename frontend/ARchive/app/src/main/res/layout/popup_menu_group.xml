<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="96dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_solid_corner_10dp_stroke_1dp"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/menuMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="지도"
        android:fontFamily="@font/suit_bold"
        android:textAppearance="@style/TextAppearance.App.caption4"
        android:textColor="@color/gray_700" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/menuGroupMemberManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:text="그룹원 관리"
        android:fontFamily="@font/suit_bold"
        android:textAppearance="@style/TextAppearance.App.caption4"
        android:textColor="@color/gray_700" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/menuGroupClosure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:fontFamily="@font/suit_bold"
        android:text="그룹 폐쇄"
        android:textAppearance="@style/TextAppearance.App.caption4"
        android:textColor="@color/gray_700" />
</LinearLayout>